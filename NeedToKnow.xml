<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\Blizza~1\FrameXML\UI.xsd">

	<Frame name="NeedToKnow_GroupTemplate" virtual="true">
		<Size x="1" y="1"/>
		<Frames>
			<Button parentKey="resizeButton" name="$parentResizeButton">
				<Size x="20" y="20"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="texture" name="$parentTexture" file="Interface\AddOns\NeedToKnow\Textures\Resize">
							<Size x="10" y="10"/>
						</Texture>
					</Layer>
				</Layers>
			</Button>
		</Frames>
	</Frame>

    <Frame name="NeedToKnow_BarTemplate" toplevel="true" enableMouse="true" virtual="true">
        <Size x="271" y="18"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" name="$parentBackground" setAllPoints="true">
                    <Color r="0" g="0" b="0" a="1"/>
                    <Size x="277" y="24"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="Texture" name="$parentTexture">
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="BOTTOM"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="Texture2" name="$parentTexture2">
                	<!-- For user-determined max duration -->
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                        <Anchor point="BOTTOM"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" name="$parentIcon">
                    <Anchors>
                        <Anchor point="RIGHT" relativeTo="$parent" relativePoint="LEFT"/>
                    </Anchors>
                </Texture>
                <Texture parentKey="CastTime" name="$parentCastTime" alphaMode="BLEND">
                    <Anchors>
                        <Anchor point="LEFT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" name="$parentText" inherits="GameFontHighlight" justifyH="LEFT">
                    <Size x="160" y="16"/>
                    <Anchors>
                        <Anchor point="LEFT" x="10"/>
                    </Anchors>
                </FontString>
                <FontString parentKey="Time" name="$parentTime" inherits="GameFontHighlight" justifyH="RIGHT">
                    <Size x="60" y="16"/>
                    <Anchors>
                        <Anchor point="RIGHT" x="-10"/>
                    </Anchors>
                </FontString>
                <Texture parentKey="Spark" name="$parentSpark" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
                    <Size x="32" y="60"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeTo="$parent" relativePoint="RIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame>

</Ui>
