<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\Blizza~1\FrameXML\UI.xsd">

    <!-- Load before ProfilePanel.lua -->

	<Button name="NeedToKnowScrollItemTemplate" virtual="true">
		<Size x="169" y="22"/>
		<Anchors>
			<Anchor point="RIGHT"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND" >
				<Texture parentKey="highlight" name="$parentHighlight" file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" x="1" y="-1"/>
						<Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="Check" name="$parentCheck" file="Interface\Buttons\UI-CheckBox-Check" hidden="true">
					<Size x="16" y="16"/>
					<Anchors>
						<Anchor point="LEFT" x="2"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText parentKey="text" name="$parentText" inherits="GameFontHighlight" justifyH="LEFT">
			<Anchors>
				<Anchor point="LEFT" relativeTo="$parentCheck" relativePoint="RIGHT" x="3" y="0"/>
				<Anchor point="RIGHT" x="-3" y="0"/>
			</Anchors>
		</ButtonText>
		<HighlightTexture file="Interface\FriendsFrame\UI-FriendsFrame-HighlightBar-Blue" alphaMode="ADD"/>
	</Button>

	<Frame name="InterfaceOptionsNeedToKnowProfilePanel" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="title" name="$parentTitle" text="NeedToKnow" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-16"/>
					</Anchors>
				</FontString>
				<FontString parentKey="subText" name="$parentSubText1" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="5" justifyH="LEFT" justifyV="TOP">
					<Size>
						<AbsDimension y="32" x="0"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT" x="0" y="-8"/>
						<Anchor point="RIGHT" x="-24" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="activateButton" name="$parentSwitchToBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentSubText1" relativePoint="BOTTOM" y="-24"/>
					<Anchor point="RIGHT" x="-16"/>
				</Anchors>
			</Button>
			<Button parentKey="deleteButton" name="$parentDeleteBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentSwitchToBtn" relativePoint="BOTTOMRIGHT" y="-16"/>
				</Anchors>
			</Button>
			<Button parentKey="toAccountButton" name="$parentPublicBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentDeleteBtn" relativePoint="BOTTOMRIGHT" y="-16"/>
				</Anchors>
			</Button>
			<Button parentKey="toCharacterButton" name="$parentPrivateBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentDeleteBtn" relativePoint="BOTTOMRIGHT" y="-16"/>
				</Anchors>
			</Button>
		</Frames>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="newNameLabel" name="$parentEditLabel" inherits="GameFontNormalSmall" nonspacewrap="true" maxLines="1" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentPublicBtn" relativePoint="BOTTOMLEFT" y="-30"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox parentKey="editBox" name="$parentNewName" inherits="InputBoxTemplate" letters="256" historyLines="0" autoFocus="false">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentEditLabel" relativePoint="BOTTOMLEFT"/>
				</Anchors>
			</EditBox>
			<Button parentKey="copyButton" name="$parentCopyBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOP" relativeTo="$parentNewName" relativePoint="BOTTOM" y="-16"/>
					<Anchor point="RIGHT" relativeTo="$parentDeleteBtn" relativePoint="RIGHT" x="-2"/>
				</Anchors>
			</Button>
			<Button parentKey="renameButton" name="$parentRenameBtn" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentCopyBtn" relativePoint="BOTTOMRIGHT" y="-16"/>
				</Anchors>
			</Button>
			<ScrollFrame parentKey="profileScrollFrame" name="$parentProfileScrollFrame" inherits="BasicHybridScrollFrameTemplate">					
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSubText1" relativePoint="BOTTOMLEFT" y="-28"/>
					<Anchor point="BOTTOM" y="20"/>
					<Anchor point="RIGHT" relativeTo="$parentSwitchToBtn" relativePoint="LEFT" x="-40"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString parentKey="label" name="$parentLabel" text="ScrollFrame" inherits="GameFontNormal" justifyH="LEFT" justifyV="TOP">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" y="6"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</ScrollFrame>
		</Frames>
	</Frame>

</Ui>
