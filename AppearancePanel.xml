<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\..\Blizza~1\FrameXML\UI.xsd">

	<!-- Load before AppearancePanel.lua -->

	<Slider name="NeedToKnowSliderTemplate" orientation="HORIZONTAL" minValue="0" maxValue="1" defaultValue="0.5" obeyStepOnDrag="true" enableMouse="true" inherits="BackdropTemplate" virtual="true">
		<Size x="144" y="17"/>
		<KeyValues>
			<KeyValue key="backdropInfo" value="BACKDROP_SLIDER_8_8" type="global"/>
		</KeyValues>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="-10" bottom="-10"/>
		</HitRectInsets>
		<ThumbTexture parentKey="Thumb" name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
			<Size x="32" y="32"/>
		</ThumbTexture>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="label" name="$parentLabel" inherits="GameFontHighlight" text="Slider label">
					<Anchors>
						<Anchor point="LEFT" x="-96"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox parentKey="editBox" name="$parentEditBox" inherits="InputBoxTemplate" letters="4" autoFocus="false">
				<Size x="30" y="20"/>
				<Anchors>
					<Anchor point="LEFT" relativePoint="RIGHT" x="12" y="1"/>
				</Anchors>
				<Scripts>
					<OnLeave function="GameTooltip_Hide"/>
				</Scripts>
			</EditBox>
		</Frames>
	</Slider>

    <Button name="NeedToKnowColorButtonTemplate" virtual="true">
        <Size>
            <AbsDimension x="16" y="16"/>
        </Size>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentSwatch">
                    <Size>
                        <AbsDimension x="16" y="16"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                    <Color r="1.0" g="1.0" b="1.0"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="label" name="$parentLabel" inherits="GameFontHighlight" justifyH="LEFT" justifyV="TOP" text="Button label">
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parent" relativePoint="RIGHT" x="8"/>
                        <!-- <Anchor point="LEFT" relativeTo="$parent" x="-120"/> -->
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <NormalTexture parentKey="normalTexture" name="$parentNormalTexture" file="Interface\ChatFrame\ChatFrameColorSwatch"/>
    </Button>

	<Frame name="NeedToKnowScrollFrameTemplate" virtual="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString parentKey="title" name="$parentTitle" text="ScrollBar" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</FontString>
				<FontString parentKey="value" name="$parentValue" text="Value" inherits="GameFontHighlightSmall" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="TOPRIGHT" x="4"/>
						<Anchor point="RIGHT"/>
						<Anchor point="BOTTOM" relativePoint="TOP" y="-14"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentFrame">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT"/>
					<Anchor point="BOTTOMRIGHT" x="-24"/>
				</Anchors>
			</Frame>
			<ScrollFrame parentKey="List" name="$parentList" inherits="HybridScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentFrame" x="3" y="-7" />
					<Anchor point="BOTTOMRIGHT" relativeTo="$parentFrame" x="-3" y="7"/>
				</Anchors>
				<Frames>
					<Slider parentKey="scrollBar" name="$parentScrollBar" inherits="HybridScrollBarTemplate">
						<Anchors>
							<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="3" y="-16"/>
						</Anchors>
					</Slider>
				</Frames>
			</ScrollFrame>
		</Frames>
	</Frame>

	<Frame name="InterfaceOptionsNeedToKnowAppearancePanel" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="title" name="$parentTitle" text="NeedToKnow" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT" x="16" y="-16"/>
					</Anchors>
				</FontString>
				<FontString parentKey="subText" name="$parentSubText1" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
					<Size>
						<AbsDimension y="24" x="0"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT" x="0" y="-8"/>
						<Anchor point="RIGHT" x="-24" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
<!-- 
		<Scripts>
			<OnLoad>
				NeedToKnow.AppearancePanel.OnLoad(self)
			</OnLoad>
		</Scripts>
 -->
		<Frames>
			<Button parentKey="backgroundColorButton" name="$parentBackgroundColorButton" inherits="NeedToKnowColorButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSubText1" relativePoint="BOTTOMLEFT" x="2" y="-16"/>
				</Anchors>
			</Button>
			<Slider parentKey="barSpacingSlider" name="$parentBarSpacingSlider" inherits="NeedToKnowSliderTemplate" parentArray="sliders">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentBackgroundColorButton" relativePoint="BOTTOMLEFT" x="96" y="-16"/>
				</Anchors>
			</Slider>
			<Slider parentKey="barPaddingSlider" name="$parentBarPaddingSlider" inherits="NeedToKnowSliderTemplate" parentArray="sliders">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentBarSpacingSlider" relativePoint="BOTTOMLEFT" y="-16"/>
				</Anchors>
			</Slider>
			<Slider parentKey="fontSizeSlider" name="$parentFontSizeSlider" inherits="NeedToKnowSliderTemplate" parentArray="sliders">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentBarPaddingSlider" relativePoint="BOTTOMLEFT" y="-16"/>
				</Anchors>
			</Slider>
			<Frame parentKey="fontOutlineMenu" name="$parentFontOutlineMenu" inherits="UIDropDownMenuTemplate" enableMouse="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentFontSizeSlider" relativePoint="BOTTOMLEFT" x="36" y="-12"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString parentKey="label" name="$parentLabel" inherits="GameFontHighlight" text="Menu label">
							<Anchors>
								<Anchor point="LEFT" x="-132" y="2"/>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Button parentkey="editModeButton" name="$parentEditModeButton" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOM" x="-12" y="24"/>
				</Anchors>
				<Scripts>
					<OnLeave function="GameTooltip_Hide"/>
				</Scripts>
			</Button>
			<Button parentkey="playModeButton" name="$parentPlayModeButton" inherits="UIPanelButtonTemplate">
				<Size>
					<AbsDimension x="128" y="22"/>
				</Size>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOM" x="12" y="24"/>
				</Anchors>
				<Scripts>
				   <OnLeave function="GameTooltip_Hide"/>
				</Scripts>
			</Button>
			<Frame parentKey="Textures" name="$parentTextures" inherits="NeedToKnowScrollFrameTemplate">
				<Anchors>
					<!-- <Anchor point="TOP" relativeTo="$parentBarSpacingSlider" relativePoint="BOTTOM" y="-180"/> -->
					<Anchor point="TOP" relativeTo="$parentFontOutlineMenu" relativePoint="BOTTOM" y="-24"/>
					<Anchor point="LEFT" relativePoint="LEFT" x="14"/>
					<Anchor point="BOTTOM" relativeTo="$parentEditModeButton" relativePoint="TOP" y="10"/>
				</Anchors>
			</Frame>
			<Frame parentKey="Fonts" name="$parentFonts" inherits="NeedToKnowScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentTextures" relativePoint="TOPRIGHT" x="10"/>
					<Anchor point="BOTTOM" relativeTo="$parentEditModeButton" relativePoint="TOP" y="10"/>
					<Anchor point="RIGHT" x="-10"/>
				</Anchors>
			</Frame>
		</Frames>
	</Frame>

</Ui>
